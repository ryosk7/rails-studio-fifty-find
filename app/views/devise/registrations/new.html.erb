<div class="container">
  <div class='col-xs-12 col-sm-6 col-md-6 col-md-offset-3'>
    <div class="sign-box">
      <h2>Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :first_name, required: true, placeholder: 'Kenny' %>
          <%= f.input :last_name, required: true, placeholder: 'Southpark' %>
          <%= f.input :email, required: true, autofocus: true, placeholder: 'sample@email.com'  %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-danger" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


